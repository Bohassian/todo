<div class="container">
  <div class="row">
    <div class="col-12 mt-5 mb-5">
      <h1>
        New List Item
      </h1>
    </div>
    <div class="col-12">
      <%= form_for list_item, url: task_list_items_path(list_item.task) do |f| %>
        <div class="form-group">
          <%= f.text_field :description, placeholder: "Description", class: "w-100" %>
        </div>
        <div class="form-group">
          <%= f.text_field :priority, placeholder: "Priority (Integer Greater Than Zero)", class: "w-100" %>
        </div>
        <%= f.submit "Submit", class: "btn btn-lg btn-primary" %>
      <% end %>
    </div>
  </div>
</div>